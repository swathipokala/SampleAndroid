<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="0dp"
        android:background="@drawable/pagemail_topimg1"
        android:padding="7dp" >

        <Button
            android:id="@+id/homeorBackbtn"
            style="@style/darkgraycolor"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/home_page_link"
            android:onClick="showHome"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal"
            android:padding="2dp" >

            <ImageView
                android:id="@+id/mailIcon"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:background="@android:color/transparent"
                android:src="@drawable/header_statements" />
        </LinearLayout>

        <ImageView
            android:id="@+id/serachIcon"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="showHideSearchView"
            android:visibility="visible"
            android:src="@drawable/pagemail_searchicon" />

        <SearchView
            android:id="@+id/searchviewText"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@+id/serachIcon"
            android:background="@android:color/white"
            android:paddingRight="3dp"
            android:scaleType="fitCenter"
            android:visibility="invisible" >
        </SearchView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="25dp"
        android:background="@color/black"
        android:gravity="left|right"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/leftNavcashFlow"
            android:layout_width="288dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="vertical"
            android:paddingTop="0dp" >

            <LinearLayout
                android:id="@+id/includeProvidersLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="horizontal"
                android:weightSum="5" >

                <Button
                    android:id="@+id/allProvidersText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@color/bill_leftnav"
                    android:clickable="true"
                    android:gravity="left|center"
                    android:paddingLeft="15dp"
                    android:text="Include Providers"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                
                 <ToggleButton
                    android:id="@+id/providersOpenClose"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:onClick="showHideProviders"
                    android:background="@color/offer_color1"
                    android:textOff=""
                    android:textOn=""
                    android:checked="true"
                    android:button="@layout/all_offers_toggle" />

            </LinearLayout>

            <GridView
                android:id="@+id/gridViewProviders"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5dp"
                android:choiceMode="singleChoice"
                android:columnWidth="300dp"
                android:drawSelectorOnTop="true"
                android:gravity="center"
                android:horizontalSpacing="3dp"
                android:numColumns="2"
                android:smoothScrollbar="true"
                android:stackFromBottom="false"
                android:background="@color/bill_leftnav"
                android:stretchMode="columnWidth"
                android:textFilterEnabled="false"
                android:verticalSpacing="3dp"
                android:clickable="true" >
            </GridView>

            <LinearLayout
                android:id="@+id/includeCategoriesLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:weightSum="5" >

                <Button
                    android:id="@+id/allCategoriesText"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:background="@color/bill_leftnav"
                    android:clickable="true"
                    android:gravity="left|center"
                    android:paddingLeft="15dp"
                    android:text="Include Categories"
                    android:textAllCaps="true"
                    android:textColor="@color/grey_color"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                
                 <ToggleButton
                    android:id="@+id/categoriesOpenClose"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:layout_weight="4"
                    android:onClick="showHideProviders"
                    android:background="@color/offer_color1"
                    android:textOff=""
                    android:textOn=""
                    android:checked="true"
                    android:button="@layout/all_offers_toggle" />

              
            </LinearLayout>

            <ScrollView
                android:id="@+id/cashFlowCategoriesScrollView"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:background="@color/bill_leftnav"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/cashFlowCategorieslist"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rightNavcashFlow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="24dp"
             >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/bill_header"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="10dp" >

                <ToggleButton
                    android:id="@+id/includeAllCheck"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:background="@drawable/checkbox_un_ticked"
                    android:clickable="true"
                    android:padding="5dp"
                    android:scaleType="fitStart"
                    android:onClick="onIncludeAllChecked"
                    android:textOff=""
                    android:textOn="" />

                <TextView
                    android:id="@+id/paylbl"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center_vertical"
                    android:paddingLeft="5dp"
                    android:text="Include All"
                    android:textColor="#ffff"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:paddingRight="10dp" >

                    <TextView
                        android:id="@+id/totallbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right|end"
                        android:paddingLeft="2dp"
                        android:text="Total"
                        android:textColor="@android:color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                    
                     <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:text="$"
                        android:textColor="#ffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/totallblValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#ffff"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

            <ScrollView
                android:id="@+id/cashFlowRightNavScrollView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/cashFlowPayAdapter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>