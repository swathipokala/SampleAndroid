<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp" >

    <LinearLayout
        android:id="@+id/llofferproviderMain"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp" >

        <ToggleButton
            android:id="@+id/onOffImage"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textOff=""
            android:textOn="" />

        <ImageView
            android:id="@+id/offerProvderImage"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:paddingLeft="15dp" />

        <com.rrdonnelly.up2me.components.RobotoTextView
            android:id="@+id/providersName"
            android:layout_width="200dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:clickable="false"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text=""
            style="@style/darkgraycolor"
            android:contentDescription="@string/fontstyle5"/>
            
    </LinearLayout>

    <LinearLayout
        android:id="@+id/Layout4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/llofferproviderMain"
        android:background="#A8A9B8"
        android:orientation="horizontal" >
    </LinearLayout>

</RelativeLayout>