<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#2A2A2A"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#2A2A2A" >

        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="780dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="50dp"
            android:background="@layout/managetagssharplayout"
            android:orientation="vertical" 
            android:id="@+id/llregisterUserForm">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" 
                android:layout_marginTop="80dp">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:height="10dp"
                    android:hint="@string/firstname"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:width="180dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:height="10dp"
                    android:hint="@string/lastname"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:width="180dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <EditText
                    android:id="@+id/streetaddress1"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:height="10dp"
                    android:hint="@string/streetaddress1"
                    android:inputType="text"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <EditText
                    android:id="@+id/streetaddress2"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:hint="@string/streetaddress2"
                    android:inputType="text"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text=""
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <EditText
                    android:id="@+id/city"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:hint="@string/city"
                    android:inputType="text"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <AutoCompleteTextView
                    android:id="@+id/state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:height="10dp"
                    android:hint="@string/state"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:width="180dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/zip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:height="10dp"
                    android:hint="@string/zip"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:width="180dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/tr9"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <EditText
                    android:id="@+id/mobileno1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:height="10dp"
                    android:hint="@string/mobileno1"
                    android:inputType="text"
                    android:textColor="@color/black"
                    android:width="370dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" 
                android:layout_marginTop="40dp">

                <EditText
                    android:id="@+id/email"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:hint="@string/email"
                    android:inputType="textEmailAddress"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <EditText
                    android:id="@+id/pwd"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:hint="@string/pwd"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center" >

                <EditText
                    android:id="@+id/confirmpwd"
                    android:layout_width="370dp"
                    android:layout_height="wrap_content"
                    android:background="@layout/round_corner_edittext"
                    android:hint="@string/confirmpwd"
                    android:inputType="textPassword"
                    android:textColor="@color/black" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="@string/mandatory"
                    android:textColor="@color/red"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:gravity="center|right|bottom" 
                android:layout_marginRight="60dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    android:textStyle="bold" 
                    android:layout_marginRight="5dp"
                    android:clickable="true"
                    android:onClick="onClickCancelBtn"/>
                
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:background="@drawable/button_bg"
                    android:gravity="center"
                    android:text="@string/register"
                    android:textColor="@color/white"
                    android:textStyle="bold" 
                    android:clickable="true"
                    android:onClick="onClickRegisterBtn"/>
            </LinearLayout>
            
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:contentDescription="@drawable/salogosignup"
            android:scaleType="fitStart"
            android:src="@drawable/up2melogo" />

    </RelativeLayout>

</ScrollView>