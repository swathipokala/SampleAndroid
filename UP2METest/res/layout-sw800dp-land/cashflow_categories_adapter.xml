<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/offer_color1"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp" >

        <TextView
            android:id="@+id/cashFlowCategories"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center"
            android:clickable="true"
            android:paddingLeft="20dp"
            android:text="Automobile"
            android:textAllCaps="true"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right|center_vertical" >

            <ToggleButton
                android:id="@+id/cashFlowCategoriesChk"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right"
                android:layout_marginLeft="100dp"
                android:background="@drawable/checkbox_un_ticked"
                android:clickable="true"
                android:scaleType="fitStart"
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>
    
     <LinearLayout
          android:id="@+id/cashFlowLayoutSeparator1"
          android:layout_width="match_parent"
          android:layout_height="1dp"
           android:background="@drawable/light_shadow"
          android:orientation="vertical" >
      </LinearLayout>

</LinearLayout>